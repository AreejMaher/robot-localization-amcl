<launch>
  <!-- Launch STM32 Communication Node -->
  <node name="serial_node" pkg="rosserial_python" type="serial_node.py">
          <param name="port" value="/dev/ttyACM0"/>
          <param name="baud" value="56700" />
  </node>


  <!-- Include the LIDAR Launch File -->
    <include file="$(find rplidar_ros)/launch/rplidar_a1.launch"> 
  </include>

 <node pkg="tf" type="static_transform_publisher" name="laser_transform_publisher"
        args="0 0 0.26 3.14159 0 0 base_link laser 100" />

 <!-- <node pkg="tf" type="static_transform_publisher" name="map_transform_publisher"
        args="0 0 0 0 0 0 map odom 100" /> -->

  <!-- Include the AMCL Launch File -->
  <include file="$(find amcl_localization)/Lanuch/amcl_shato.launch">
  </include>

  <!-- Launch Odometry Node -->
  <node name="mainOdom" pkg="dead_reckoning" type="mainOdom.py" output="screen"> 
  </node>

  <!-- Include the IMU Launch File -->
  <include file="$(find ros_imu_bno055)/launch/imu.launch">
  </include> 

  
  <!-- <param name="robot_description" command="$(find xacro)/xacro $(find miarobot_description)/urdf/model.urdf.xacro" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
  </node> -->





</launch>
